  "description": "Utilities to implement standard event patterns in LaxarJS widgets",
  "homepage": "http://laxarjs.org",
  "main": "laxar-patterns.js",
  "browser": "dist/laxar-patterns.js",
  "authors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LaxarJS/laxar-patterns.git"
  },
  "scripts": {
    "prepublish": "npm run dist",
    "test": "npm run karma && npm run eslint",
    "browser-spec": "npm run browser-spec-build && npm run browser-spec-start",
    "dist": "cross-env NODE_ENV=production webpack",
    "browser-spec-build": "cross-env NODE_ENV=browser-spec webpack",
    "browser-spec-start": "cross-env NODE_ENV=browser-spec webpack-dev-server --port 8082 --inline",
