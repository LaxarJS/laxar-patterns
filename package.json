    "cross-env": "^3.1.4",
    "eslint": "^3.13.1",
    "eslint-config-laxarjs": "^0.3.0",
    "jasmine-core": "~2.5.2",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
